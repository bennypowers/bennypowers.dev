<style>
figure.figure-img {
  & figcaption {
    font-size: 80%;
  }
}
</style>
<figure class="figure-img" webc:root="override">
  <img :src="src"
       :alt="alt ?? ''"
       :width="width ?? false"
       :height="height ?? false">
  <figcaption :style="width ? `max-width: ${width}px;` : false">
    <slot></slot>
  </figcaption>
</figure>

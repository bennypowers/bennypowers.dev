<template webc:type="11ty"
          11ty:type="njk"
          :@icon="collections.icon.find(x => x.fileSlug === name)">
  {%- if icon -%}
    {%- html 'svg' -%}
      <g id="{{name}}-icon">{{ icon.content | safe }}</g>
    {%- endhtml -%}
  {%- endif -%}
</template>

<svg :aria-hidden="ariaHidden ?? false" @attributes><use :href="`#${name}-icon`"></svg>


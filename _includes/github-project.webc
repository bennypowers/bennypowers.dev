<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title @text="title"></title>
    <meta name="viewport" content="width=device-width, minimum-scale=1, initial-scale=1, user-scalable=yes">
    <meta name="description" :content="description">

    <!-- Go module resolution meta tags -->
    <meta name="go-import" :content="`bennypowers.dev/${pageId} git https://github.com/${repo}`">
    <meta name="go-source" :content="`bennypowers.dev/${pageId} https://github.com/${repo} https://github.com/${repo}/tree/main{/dir} https://github.com/${repo}/blob/main{/dir}/{file}#L{line}`">

    <link rel="stylesheet" href="/assets/theme-light.css" media="(prefers-color-scheme: light)" webc:keep>
    <link rel="stylesheet" href="/assets/theme-dark.css" media="(prefers-color-scheme: dark)" webc:keep>
    <link rel="stylesheet" href="/assets/prism.css" webc:keep>

    <style webc:keep>
      html {
        color-scheme: light dark;
        font-family: sans-serif;
        color: light-dark(black, white);
      }

      .github-project-page {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem;
      }

      .github-project-page nav {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid light-dark(#ccc, #444);
      }

      .github-project-page nav a {
        font-size: 1.2rem;
        text-decoration: none;
        color: light-dark(#0366d6, #58a6ff);
      }

      .github-project-page nav a:hover {
        text-decoration: underline;
      }

      .github-project-page article {
        line-height: 1.6;
      }

      .github-project-page article img {
        max-width: 100%;
        height: auto;
      }

      .github-project-page article code {
        background: light-dark(#f6f8fa, #161b22);
        padding: 0.2em 0.4em;
        border-radius: 3px;
        font-size: 85%;
      }

      .github-project-page article pre {
        background: light-dark(#f6f8fa, #161b22); padding: 1rem;
        border-radius: 6px;
        overflow-x: auto;
      }

      .github-project-page article pre code {
        background: none;
        padding: 0;
      }

      .github-project-page h1, .github-project-page h2, .github-project-page h3 {
        margin-top: 1.5em;
        margin-bottom: 0.5em;
      }

      .github-project-page p {
        margin-bottom: 1em;
      }

      .github-project-page ul, .github-project-page ol {
        margin-bottom: 1em;
        padding-left: 2em;
      }

      .github-project-page blockquote {
        border-left: 4px solid light-dark(#ddd, #444);
        padding-left: 1em;
        margin-left: 0;
        color: light-dark(#666, #999);
      }
    </style>

    <!-- WebC bundled component styles -->
    <style @raw="getBundle('css')"></style>
    <style @raw="getBundle('css', 'desktop')"
           media="(min-width: 1000px)"
           data-bundle="desktop" ></style>
    <script @raw="getBundle('js')" webc:keep></script>
  </head>
  <body>
    <main class="github-project-page">
      <nav>
        <a :href="`https://github.com/${repo}`">
          View on GitHub
        </a>
      </nav>

      <article @raw="readme"></article>
    </main>
  </body>
</html>
